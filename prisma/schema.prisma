generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Tag {
  id        Int       @id @default(autoincrement())
  title     String    @unique
  createdAt DateTime  @default(now())
  articles  Article[]
}

model Article {
  id             Int      @id @default(autoincrement())
  slug           String   @unique
  title          String   @unique
  description    String
  body           String
  author         User?    @relation(fields: [authorId], references: [id])
  authorId       Int      @unique
  tagList        Tag[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  favorited      Boolean  @default(false)
  favoritesCount Int      @default(0)
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  token    String?
  username String    @unique
  bio      String    @default("")
  image    String?
  articles Article[]
}
